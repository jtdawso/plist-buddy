-- Initial plist-buddy.cabal generated by cabal init.  For further
-- documentation, see http://haskell.org/cabal/users-guide/

name:                plist-buddy
version:             0.1.0.1
synopsis:            Remote monad for editing plists
description:         Remote monad wrapper around the plistbuddy shell command for editing plists
license:             BSD3
license-file:        LICENSE
author:              Andy Gill
maintainer:          andygill@ku.edu
copyright:           (c) 2015 Andy Gill
category:            Database
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  exposed-modules:     Database.PlistBuddy
  other-modules:       Database.PlistBuddy.Audit
                     , Database.PlistBuddy.Command
                     , Database.PlistBuddy.Types
                     , Database.PlistBuddy.Open
  other-extensions:    GeneralizedNewtypeDeriving
  build-depends:       base >=4.8 && <5
                     , base16-bytestring == 0.1.*
                     , base64-bytestring == 1.0.*
                     , bytestring == 0.10.*
                     , cryptohash == 0.11.*
                     , directory >= 1.2 && < 1.4
                     , mtl >=2.2 && <2.3
                     , natural-transformation
                     , process >= 1.2 && < 1.7
                     , posix-pty >= 0.2.1 && < 0.3
                     , remote-monad
                     , text      == 1.2.*
                     , time      >= 1.5 && < 1.7
                     , xml       >= 1.3.14 && < 1.4
  hs-source-dirs:      src
  default-language:    Haskell2010

executable plist-example
  hs-source-dirs: example
  main-is: Main.hs
  build-depends: base
               , time
               , plist-buddy

test-suite test-plist-buddy
  hs-source-dirs: tests
  main-is: Main.hs
  type: exitcode-stdio-1.0
  build-depends:       base >=4.7 && <5
                     , directory >= 1.2 && < 1.4
                     , plist-buddy == 0.1.0.1
                     , bytestring == 0.10.*
                     , mtl >=2.2 && <2.3
                     , hspec
                     , process >=1.2 && <1.7
                     , posix-pty >= 0.2.1 && < 0.3
                     , QuickCheck >= 2.8 && < 3.0
                     , time      >= 1.5 && < 1.7
                     , text
  default-language:    Haskell2010
  GHC-options:         -threaded

source-repository head
  type:     git
  location: https://github.com/andygill/plist-buddy.git
